@{
    ViewData["Title"] = "Home Page";
}
<style>
    .container {
        display: grid;
        grid-template-columns: repeat(2, 1fr);
        gap: 10px;
        width: 150%;
    }

    .card {
        display: flex;
        justify-content: space-between;
        align-items: center;
        padding: 20px;
        color: white;
        font-size: 20px;
        font-weight: bold;
        border-radius: 8px;
        position: relative;
    }

    .category {
        background-color: #0097A7;
    }

    .news {
        background-color: #388E3C;
    }

    .members {
        background-color: #FBC02D;
    }

    .comments {
        background-color: #D32F2F;
    }

    .details a {
        color: white;
        text-decoration: none;
    }

    h1 {
        font-size: 60px;
        margin-bottom: 20px;
        margin-left: 350px;
    }
</style>
<div>
    <h1>Welcome</h1>
    <h2>Tổng kho thực phẩm chuyên đề 5</h2>
    <div class="container">
        <div class="card category">
            <div class="details">
                <a asp-controller="SanPham" asp-action="Index" class="nav-link text-white">
                    <i class="fas fa-box"></i> Danh sách thực phẩm: @ViewData["SoLuongSanPham"]
                </a>
            </div>
        </div>
        <div class="card news">
            <span class="details">
                <a asp-controller="Khohang" asp-action="Index" class="nav-link text-white">
                    <i class="fas fa-building"></i> Danh sách kho hàng: @ViewData["SoLuongKho"]
                </a>
            </span>
        </div>
        <div class="card members">
            <span class="details">
                <a asp-controller="NhanVien" asp-action="Index" class="nav-link text-white">
                    <i class="fas fa-users"></i> Danh sách nhân viên: @ViewData["SoLuongNhanVien"]
                </a>
            </span>
        </div>
        <div class="card members">
            <span class="details">
                <a asp-controller="PhieuXuat" asp-action="Index" class="nav-link text-white">
                    <i class="fas fa-users"></i> Danh sách phiếu xuất: @ViewData["SoLuongPhieuXuat"]
                </a>
            </span>
        </div>
        <div class="card comments">
            <span class="details">
                <a asp-controller="PhieuNhap" asp-action="Index" class="nav-link text-white">
                    <i class="fas fa-file-alt"></i> Danh sách phiếu nhập: @ViewData["SoLuongPhieuNhap"]
                </a>
            </span>
        </div>
        <div class="card comments">
            <span class="details">
                <a asp-controller="KhachHang" asp-action="Index" class="nav-link text-white">
                    <i class="fas fa-user"></i> Danh sách khách hàng: @ViewData["SoLuongKhachHang"]
                </a>
            </span>
        </div>
        <div class="card comments">
            <span class="details">
                <a asp-controller="NhaCungCap" asp-action="Index" class="nav-link text-white">
                    <i class="fas fa-user"></i> Danh sách nhà cung cấp ➜ @ViewData["SoLuongNhaCungCap"]
                </a>
            </span>
        </div>

        <div class="card category">
            <div class="details">
                <a asp-controller="TaiKhoan" asp-action="Index" class="nav-link text-white">
                    <i class="fas fa-users-cog"></i> Quản lý tài khoản
                </a>
            </div>
        </div>

    </div>
</div>  