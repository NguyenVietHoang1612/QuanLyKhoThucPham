@model IEnumerable<QuanLyKhoThucPham.Models.Quanlykhachhang>

@{
    ViewData["Title"] = "Index";
}

<h1>Danh Sách Khách Hàng</h1>

<p>
    
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.TenKH)
            </th>
           
            
            <th>
                @Html.DisplayNameFor(model => model.Diachi)
            </th>
           
            <th>
                @Html.DisplayNameFor(model => model.SDT)
            </th>
            <th>
                <a asp-action="Create"class="khung">Tạo Mới</a>
            </th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.TenKH)
            </td>
           
            <td>
                @Html.DisplayFor(modelItem => item.Diachi)
            </td>
           
            <td>
                @Html.DisplayFor(modelItem => item.SDT)
            </td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.MaKH" class="khung">chỉnh sửa</a> 
                <a asp-action="Details" asp-route-id="@item.MaKH"class="khung">Chi Tiết</a> 
                <a asp-action="Delete" asp-route-id="@item.MaKH"class="khung">Xóa</a>
            </td>
        </tr>
}
    </tbody>
    <form asp-controller="Quanlykhachhang" asp-action="Index" method="post">
        <p>
            <label>Title: <input type="text" name="searchString" /></label>
            <input type="submit" value="Filter" />
        </p>
    </form>

</table>
