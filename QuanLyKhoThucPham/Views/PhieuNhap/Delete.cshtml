@model QuanLyKhoThucPham.Models.PhieuNhap

@{
    ViewData["Title"] = "Tạo Phiếu Nhập";
}

h2>Chi tiết Phiếu Nhập</h2>


<div class="row mb-2">
    <div class="col-sm-2">
        @Html.DisplayNameFor(model => model.NgayNhap)
    </div>
    <div class="col-sm-10">
        @Html.DisplayFor(model => model.NgayNhap)
    </div>
</div>
<div class="row mb-2">
    <div class="col-sm-2">
        @Html.DisplayNameFor(model => model.NhaCungCap.TenNhaCungCap)
    </div>
    <div class="col-sm-10">
        @Html.DisplayFor(model => model.MaNhaCungCap)
    </div>
</div>
<div class="row mb-2">
    <div class="col-sm-2">
        @Html.DisplayNameFor(model => model.MaKho)
    </div>
    <div class="col-sm-10">
        @Html.DisplayFor(model => model.MaKho)
    </div>
</div>

<div class="row mb-2">
    <div class="col-sm-2">
        @Html.DisplayNameFor(model => model.MaNhanVien)
    </div>
    <div class="col-sm-10">
        @Html.DisplayFor(model => model.MaNhanVien)
    </div>
</div>

<dd class="col-sm-10">
    <table class="table">
        <tr>
            <th>Phiếu nhập chi tiết</th>
        </tr>
        @foreach (var item in Model.DSChiTietPhieuNhap)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.SanPham.TenSanPham)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.SoLuong)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.DonGia)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.TongTIen)
                </td>
            </tr>
        }

        <tr>
            <th>@Html.DisplayFor(model => model.TongTien)</th>
        </tr>
    </table>
</dd>
<form asp-action="Delete" method="post">
    <div>
        <a asp-action="Index" class="btn btn-info btn-sm">Thoát</a>
        <a asp-action="Delete" asp-route-id="@Model?.MaPhieuNhap" class="btn btn-info btn-sm">Xóa</a> |
    </div>
</form>


