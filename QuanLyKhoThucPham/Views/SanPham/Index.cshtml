@model IEnumerable<QuanLyKhoThucPham.Models.SanPhamModel>

@{
    ViewData["Title"] = "Index";
}

<h1>Danh Sách Thực Phẩm </h1>
<form asp-controller="SanPham" asp-action="Index">
    <div class="input-group">
        <input class="form-control" type="text" name="SearchString" placeholder="Tìm kiếm tên sản phẩm..." aria-describedby="btnNavbarSearch" />
        <button class="btn btn-primary" type="submit" />Tìm kiếm</button>
    </div>
</form>
<table class="table">
    <thead>
        <tr>
            <th>
                <a>Mã sản phẩm</a>
            </th>
            <th>
                <a>Tên sản phẩm</a>
            </th>
            <th>
                <a>Nhà sản xuất</a>
            </th>
            <th>
                <a>Số lượng</a>
            </th>

            <th>
                <a>Giá/1 sản phẩm</a>
            </th>
            <th>
                <a>Mô tả</a>
            </th>
            <th>
                <a asp-action="Create" >Tạo mới</a>
            </th>

        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.MaSP)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.TenSP)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.SoLuong)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.DonGia)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.NhaSanXuat)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.MoTa)
            </td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.MaSP">Chỉnh sửa </a> |
                <a asp-action="Details" asp-route-id="@item.MaSP">Chỉ tiết</a> |
                <a asp-action="Delete" asp-route-id="@item.MaSP">Xóa</a>
            </td>
        </tr>
}
    </tbody>
</table>
